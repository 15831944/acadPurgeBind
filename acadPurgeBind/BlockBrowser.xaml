<Window x:Class="acadPurgeBind.BlockBrowser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:acadPurgeBind"
        mc:Ignorable="d"
        Title="BlockBrowswer" Height="300" Width="300">
    <Grid>
        <Button x:Name="SelectFolder" Content="Select Folder" HorizontalAlignment="Left" Height="21" Margin="10,38,0,0" VerticalAlignment="Top" Width="104" ToolTip="Select a folder for browsing" Click="SelectFolder_Click"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="185"/>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="169" Margin="10,64,0,0" VerticalAlignment="Top" Width="185" SelectionChanged="listBox_SelectionChanged"/>

    </Grid>
</Window>
